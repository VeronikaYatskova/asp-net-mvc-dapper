@model DapperMvc.Models.Student
@{
    ViewData["Title"] = "Удаление студента";
}
<h2>@ViewBag.Title</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Model.Name
        </dd>

        <dt>Возраст</dt>
        <dd>
            @Model.Age
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>